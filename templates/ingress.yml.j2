---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: "{{ ingress_name }}"
  annotations:
    kubernetes.io/ingress.class: traefik
    cert-manager.io/cluster-issuer: "{{ cert_issuer }}"
spec:
  rules:
    - host: "{{ other_domain }}"
      http:
        paths:
          - backend:
              serviceName: web-en
              servicePort: 80
            path: /en
    - host: "{{ other_domain }}"
      http:
        paths:
          - backend:
              serviceName: web
              servicePort: 80
            path: /
    - host: "navinfo-journal.{{ domain }}"
      http:
        paths:
          - backend:
              serviceName: journal
              servicePort: 80
            path: /
    - host: "www.jiefa.{{ domain }}"
      http:
        paths:
          - backend:
              serviceName: jiefa
              servicePort: 80
            path: /
