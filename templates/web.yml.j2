---
apiVersion: v1
kind: Service
metadata:
  name: web
  labels:
    app: web
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 80
  selector:
    app: web
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: web
  labels:
    app: web
spec:
  replicas: 1
  selector:
    matchLabels:
      app: web
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: web
    spec:
      restartPolicy: Always
      containers:
        - name: web
          image: "{{ web_image }}"
          env:
            - name: DEPLOY_TIME
              value: "{{ web_time }}"
            - name: RAZZLE_ZPOSTER_CONTENT_BASE
              value: "{{ web_zposter_content_path }}"
            - name: RAZZLE_LIFE_EVENT_BASE
              value: "{{ web_event_path }}"
            - name: RAZZLE_LANG
              value: "{{ web_lang }}"
            - name: RAZZLE_TITLE
              value: "{{ web_title }}"
            - name: RAZZLE_KEYWORDS
              value: "{{ web_keywords }}"
            - name: RAZZLE_DESCRIPTION
              value: "{{ web_description }}"
          ports:
            - name: http
              containerPort: 80
          readinessProbe:
            httpGet:
              path: "{{ web_health_path }}"
              port: 80
            initialDelaySeconds: 5
            periodSeconds: 60
          livenessProbe:
            httpGet:
              path: "{{ web_health_path }}"
              port: 80
            initialDelaySeconds: 5
            periodSeconds: 60
          resources:
            limits:
              cpu: "1000m"
              memory: "1Gi"
            requests:
              cpu: "10m"
              memory: "32Mi"